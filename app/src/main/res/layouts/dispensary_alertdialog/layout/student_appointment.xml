<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/student_appointment_radioGroup"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <!--            <RadioButton-->
                <!--                android:id="@+id/student_appointment_doctor1"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:text="Radio Button 1"-->
                <!--                android:textSize="18sp"-->
                <!--                android:fontFamily="sans-serif-medium"-->
                <!--                android:layout_height="wrap_content"/>-->
                <!--            <RadioButton-->
                <!--                android:id="@+id/student_appointment_doctor2"-->
                <!--                android:text="Radio Button 1"-->
                <!--                android:textSize="18sp"-->
                <!--                android:fontFamily="sans-serif-medium"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"/>-->
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:isScrollContainer="true"
                style="@style/Widget.AppTheme.TextInputLayoutList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/student_appointment_medical_issue_tv"
                    android:layout_width="match_parent"
                    android:isScrollContainer="true"
                    android:scrollbars="vertical"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:maxLines="3"
                    android:gravity="left|top"
                    android:fontFamily="sans-serif"
                    android:inputType="textLongMessage|textMultiLine"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="Medical Issue" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>